rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Creators Collection
    match /creators/{userId} {
      allow read: if true; // Public profiles
      allow write: if isOwner(userId);
    }

    // Creator Brands Collection (Public info about creators)
    match /creator-brands/{brandId} {
      allow read: if true;
      allow write: if isAuthenticated(); // TODO: lock down to owner

      // Subscribers Subcollection - Accessible via parent
      match /subscribers/{subId} {
         allow read: if isAuthenticated(); 
         allow write: if isAuthenticated();
      }
    }
    
    // Collection Group Query Rule for 'subscribers'
    match /{path=**}/subscribers/{subId} {
       allow read: if isAuthenticated();
    }

    // Newsletters
    match /newsletters/{newsletterId} {
      // Anyone can read 'sent' newsletters (or restrict to auth users)
      // Creators can read their own drafts
      allow read: if (resource.data.status == 'sent') || (isAuthenticated() && resource.data.creatorId == request.auth.uid);
      
      // Only creators can create/update
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }

    // Support Tickets
    match /tickets/{ticketId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid);
    }

    // Catch-all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}